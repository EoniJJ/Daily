<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_group_height"
    android:layout_marginBottom="@dimen/card_margin_top_bottom"
    android:layout_marginTop="@dimen/card_margin_top_bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_group_text_time_height"
        android:gravity="center|left"
        android:paddingLeft="@dimen/card_group_text_time_paddingLeft"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/card_group_text_time_textSize" />

    <include layout="@layout/cardview_simple_item" />
</LinearLayout>
