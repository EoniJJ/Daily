<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_marginTop="@dimen/card_margin_top_bottom"
    android:layout_marginBottom="@dimen/card_margin_top_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_cardCornerRadius"
    android:layout_marginLeft="@dimen/cardView_margin_left_right"
    android:layout_marginRight="@dimen/cardView_margin_left_right"
    app:cardBackgroundColor="?attr/card_backgroundColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/card_content_padding">
        <TextView
            android:id="@+id/textView_title"
            android:layout_width="@dimen/card_text_width"
            android:layout_height="@dimen/card_text_height"
            android:textSize="@dimen/card_text_textSize"
            android:gravity="left"
            android:textColor="?attr/text_color"
            />
        <ImageView
            android:id="@+id/imageView_image"
            android:layout_width="@dimen/card_image_width"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>